@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h2 class="display-4">Удаление хранилища</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-8">Хранилище:</div>
        <div class="col-8">
            <select id="company" name="company" class="form-control" asp-items="@(new SelectList(@ViewBag.Companies, "Id", "CompanyName"))">
            </select>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-8">
                <input type="submit" value="Удалить" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>